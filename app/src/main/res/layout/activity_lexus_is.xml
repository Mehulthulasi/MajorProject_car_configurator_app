<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lexusIS">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:src="@drawable/logo11"
        android:contentDescription="Logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="ContentDescription,HardcodedText" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/imageView7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Main car image with left and right buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/myButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/left"
                    android:background="@android:color/darker_gray" />

                <ImageView
                    android:id="@+id/middleImage"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="16dp"
                    android:src="@drawable/is"
                    android:contentDescription="Car Image" />

                <ImageButton
                    android:id="@+id/secondButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/right"
                    android:background="@android:color/darker_gray" />

            </LinearLayout>

            <!-- Color selection buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="16dp">

                <ImageButton
                    android:id="@+id/thirdButton"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/c1"
                    android:background="@android:color/transparent" />

                <ImageButton
                    android:id="@+id/fourthButton"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/c2"
                    android:background="@android:color/transparent" />

                <ImageButton
                    android:id="@+id/fifthButton"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/c3"
                    android:background="@android:color/transparent" />

            </LinearLayout>

            <!-- Interior image with navigation buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="32dp">

                <ImageButton
                    android:id="@+id/seventhButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/left"
                    android:background="@android:color/darker_gray" />

                <ImageView
                    android:id="@+id/secondImage"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="16dp"
                    android:src="@drawable/is"
                    android:contentDescription="Interior Image" />

                <ImageButton
                    android:id="@+id/eighthButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/right"
                    android:background="@android:color/darker_gray" />

            </LinearLayout>

            <!-- Interior color selection buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="16dp">

                <ImageButton
                    android:id="@+id/ninthButton"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/isinblcbb"
                    android:background="@android:color/transparent" />

                <ImageButton
                    android:id="@+id/tenthButton"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/isinbrobb"
                    android:background="@android:color/transparent" />

                <ImageButton
                    android:id="@+id/eleventhButton"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/isinredbb"
                    android:background="@android:color/transparent" />

            </LinearLayout>

            <!-- Engine images and selection buttons -->
            <ImageView
                android:id="@+id/thirdImage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/is"
                android:contentDescription="Engine Image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="16dp">

                <ImageButton
                    android:id="@+id/fourteenthButton"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/is300bg"
                    android:background="@android:color/transparent" />

                <ImageButton
                    android:id="@+id/fifteenthButton"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/is350bg"
                    android:background="@android:color/transparent" />

                <ImageButton
                    android:id="@+id/sixteenthButton"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/isfbg"
                    android:background="@android:color/transparent" />

            </LinearLayout>

            <!-- Wheels images and navigation buttons -->
            <ImageView
                android:id="@+id/fourthImage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/is"
                android:contentDescription="Wheels Image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">

                <ImageButton
                    android:id="@+id/whrButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/left"
                    android:background="@android:color/darker_gray" />

                <ImageButton
                    android:id="@+id/whlButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@android:color/darker_gray"
                    android:src="@drawable/right" />

            </LinearLayout>

            <!-- Wheels selection buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="16dp">

                <ImageButton
                    android:id="@+id/wh1Button"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/iswh1bg"
                    android:background="@android:color/transparent" />

                <ImageButton
                    android:id="@+id/wh2Button"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/iswhbg2"
                    android:background="@android:color/transparent" />

                <ImageButton
                    android:id="@+id/wh3Button"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/iswhbg3"
                    android:background="@android:color/transparent" />

                <ImageButton
                    android:id="@+id/wh4Button"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/iswhbg4"
                    android:background="@android:color/transparent" />

            </LinearLayout>

            <!-- Select Button -->
            <Button
                android:id="@+id/sixthButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:backgroundTint="@color/purple"
                android:text="SELECT" />

            <!-- Hidden TextViews -->
            <TextView
                android:id="@+id/carDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text=""
                android:visibility="gone" />

            <TextView
                android:id="@+id/carinterior"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text=""
                android:visibility="gone" />

            <TextView
                android:id="@+id/carengine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text=""
                android:visibility="gone" />

            <TextView
                android:id="@+id/carWheels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text=""
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
